<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bt_caixa"
        android:layout_width="215dp"
        android:layout_height="54dp"
        android:text="Caixa"
        app:layout_constraintBottom_toTopOf="@+id/bt_salvar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_remover"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/bt_mostrar"
        android:layout_width="215dp"
        android:layout_height="54dp"
        android:text="Mostrar"
        app:layout_constraintBottom_toTopOf="@+id/bt_alterar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_inserir"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/bt_inserir"
        android:layout_width="215dp"
        android:layout_height="54dp"
        android:text="Inserir"
        app:layout_constraintBottom_toTopOf="@+id/bt_mostrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/bt_remover"
        android:layout_width="215dp"
        android:layout_height="54dp"
        android:text="Remover"
        app:layout_constraintBottom_toTopOf="@+id/bt_caixa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_alterar"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/bt_alterar"
        android:layout_width="215dp"
        android:layout_height="54dp"
        android:text="Alterar"
        app:layout_constraintBottom_toTopOf="@+id/bt_remover"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_mostrar"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/bt_salvar"
        android:layout_width="215dp"
        android:layout_height="54dp"
        android:text="Salvar dados "
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_caixa"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:text="Feito por Luiz Felippe and Nathan Rodrigues"
        app:emojiCompatEnabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_salvar"
        app:layout_constraintVertical_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>